<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".setting.MyInfoActivity">
    <fragment
        android:name="com.example.blueberry2.fragment.MyInfoFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="418dp"
        android:layout_height="54dp"
        android:background="#aaa1E4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">


        <ImageButton
            android:id="@+id/imageButton8"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"

            app:srcCompat="@drawable/ic_baseline_arrow_back_24"
            android:background="@android:color/transparent"/>

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:text="내 정보"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20sp" />

    </com.google.android.material.navigation.NavigationView>


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <ImageView
            android:layout_marginTop="20dp"
            android:id="@+id/imageButton9"
            android:layout_width="214dp"
            android:layout_height="103dp"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/blueberry" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_myname"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_height="90dp"
            android:background="@drawable/square"
            android:text=""
            android:textColor="#4C4C4C"
            android:textAlignment="viewStart"
            android:textSize="18dp"
            ></Button>
            <TextView
                android:text="블루베리"
                android:id="@+id/myinfo_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

         </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <Button
            android:id="@+id/button2"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_height="90dp"
            android:background="@drawable/square"
            android:text="이메일"
            android:textColor="#4C4C4C"
            android:textAlignment="viewStart"
            android:textSize="18dp"

            />
        <TextView
            android:text="blueberry@naver.com"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/myinto_useremail" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_logout"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_height="90dp"
            android:background="@drawable/square"
            android:text="로그아웃"
            android:textColor="#4C4C4C"
            android:textAlignment="viewStart"
            android:textSize="18dp"

            >
        </Button>






    </LinearLayout>


</LinearLayout>